<p id="notice"><%= notice %></p>

<h1>Click Scores</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">Name</th>
      <th colspan="1">Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @click_scores.each do |click_score| %>
      <tr>
        <td><%=click_score.name%></td>
        <td><%=click_score.score%></td>
        <td><%= link_to 'Show', click_score %></td>
        <td><%= link_to 'Edit', edit_click_score_path(click_score) %></td>
        <td><%= link_to 'Destroy', click_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Click Score', new_click_score_path %>
